@page
@model Drone.App.Frontend.Pages.opcionesClienteModel
@{
}

<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

</head>
<body>

    <style>
        .custom_con{
            margin: 40px;
        }

        .custom_con>div{

            margin: 15px;
            height: auto;
            border-radius: 10px;

        }

        .custom_con>div:hover{

            background-color: rgba(73, 73, 72, 0.021);
        }


        h1{
            margin: 30px;
            font-size: 40px;

        }

        .card:hover{

            cursor: hand;
            
        }
    </style>
    
    <div>
        <h1>Opciones del cliente</h1>
    </div>


    <container class="custom_con row align-items-center ">

        <div class="card col-sm-10 col-md-6 col-lg-3"  onclick="">
            <h5 class="card-header">Crear un nuevo pedido</h5>
            <div class="card-body">
            <p class="card-text">Escoge los productos que quieres pedir y añadelos al carrito. Además, consulta el estado de tu pedido.</p>
            <a asp-page="/DroneViews/pedido" class="btn btn-primary">Pedir</a>
            </div>
        </div>

        <div class="card col-sm-10 col-md-6 col-lg-3">
            <h5 class="card-header">Consultar mi historial</h5>
            <div class="card-body">
            <p class="card-text">Lee información adicional sobre el pedido.</p>
            <a asp-page="/DroneViews/historialCliente" class="btn btn-primary">Consultar</a>
            </div>
        </div>

        
    </container>


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

</body>