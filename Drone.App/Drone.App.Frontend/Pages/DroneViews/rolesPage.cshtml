@page
@model Drone.App.Frontend.Pages.rolesPageModel
@{
}


<html lang="en">
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

</head>
<body>

    <style>
        .custom_con{
            margin: 40px;
        }

        .custom_con>div{

            margin: 15px;
        }

        h1{
            margin: 30px;
            font-size: 40px;

        }

    </style>


    <div>
            <h1>Roles del sistema</h1>
    </div>


    <container class="custom_con row align-items-center ">

        
          <div class="card col-sm-10 col-md-6 col-lg-3">
            <h5 class="card-header">Cliente</h5>
            <div class="card-body">
              <p class="card-text">Resgistrate o ingresa. Haz pedidos y consulta su estado y encargado. Consulta tu historial.</p>
              <a asp-page="/DroneViews/loginCliente" class="btn btn-primary">Registro o login</a>
            </div>
          </div>

        <div class="card col-sm-10 col-md-6 col-lg-3">
            <h5 class="card-header">Empresa-Admin.</h5>
            <div class="card-body">
            
              <p class="card-text">Ingresa al sistema, registra y asigna encargados, consulta el historial de pedidos.</p>
              <a asp-page="/DroneViews/loginEmpresa" class="btn btn-primary">Login</a>
            </div>
          </div>

          <div class="card col-sm-10 col-md-6 col-lg-3">
            <h5 class="card-header">Encargado</h5>
            <div class="card-body">
              <p class="card-text">Ingresa al sistema, consulta los pedidos encargados y registra sus estados.</p>
              <a asp-page="/DroneViews/loginEncargado" class="btn btn-primary">Login</a>
            </div>
          </div>

        
    </container>

    


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

</body>
</html>
